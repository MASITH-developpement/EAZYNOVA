<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_expense_view_form_extended" model="ir.ui.view">
            <field name="name">hr.expense.view.form.extended</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="inside">
                    <notebook>
                        <page string="OCR Details">
                            <group>
                                <field name="is_created_ocr" />
                                <field name="ocr_response_text" string="Responded Data"/>
                                <field name="ocr_attachment_id" string="Uploaded File"/>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>