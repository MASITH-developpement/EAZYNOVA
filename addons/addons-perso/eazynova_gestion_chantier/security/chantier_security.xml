<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groupes de sécurité -->
    <record id="group_chantier_user" model="res.groups">
        <field name="name">Utilisateur Chantier</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_chantier_manager" model="res.groups">
        <field name="name">Responsable Chantier</field>
        <field name="implied_ids" eval="[(4, ref('group_chantier_user'))]"/>
    </record>

    <!-- Règles d'accès aux enregistrements -->
    <record id="chantier_comp_rule" model="ir.rule">
        <field name="name">Chantier: multi-company</field>
        <field name="model_id" ref="model_chantier_chantier"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
