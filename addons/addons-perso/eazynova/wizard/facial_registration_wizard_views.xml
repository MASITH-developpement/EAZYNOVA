<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_facial_registration_wizard_form" model="ir.ui.view">
        <field name="name">eazynova.facial.registration.wizard.form</field>
        <field name="model">eazynova.facial.registration.wizard</field>
        <field name="arch" type="xml">
            <form string="Enregistrement Facial">
                <group>
                    <field name="user_id"/>
                    <field name="photo" widget="image"/>
                    <field name="status"/>
                </group>
                <footer>
                    <button string="Enregistrer" name="action_register" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
