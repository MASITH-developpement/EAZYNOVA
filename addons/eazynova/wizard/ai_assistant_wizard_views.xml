<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Formulaire wizard assistant IA -->
        <record id="view_ai_assistant_wizard_form" model="ir.ui.view">
            <field name="name">eazynova.ai.assistant.wizard.form</field>
            <field name="model">eazynova.ai.assistant.wizard</field>
            <field name="arch" type="xml">
                <form string="Assistant IA EAZYNOVA">
                    
                    <field name="context_model" invisible="1"/>
                    <field name="context_id" invisible="1"/>
                    <field name="conversation_history" invisible="1"/>
                    
                    <sheet>
                        
                        <!-- En-tête -->
                        <div class="oe_title">
                            <h1>
                                <i class="fa fa-robot"/> Assistant IA EAZYNOVA
                            </h1>
                        </div>
                        
                        <group>
                            <div class="alert alert-info" role="alert">
                                <i class="fa fa-info-circle"/> 
                                Posez vos questions sur la gestion de chantiers, factures, budgets, 
                                ou tout autre aspect de votre activité. L'IA vous aidera avec des 
                                suggestions personnalisées.
                            </div>
                        </group>
                        
                        <!-- Historique de conversation -->
                        <group string="Conversation" attrs="{'invisible': [('response', '=', False)]}">
                            <field name="response" 
                                   nolabel="1" 
                                   readonly="1"
                                   widget="html"
                                   options="{'style-inline': true}"/>
                        </group>
                        
                        <!-- Nouvelle question -->
                        <group string="Votre question">
                            <field name="question" 
                                   nolabel="1" 
                                   placeholder="Exemple: Comment optimiser le budget de mon chantier ?"
                                   widget="text"/>
                        </group>
                        
                    </sheet>
                    
                    <footer>
                        <button string="Demander à l'IA" 
                                name="action_ask" 
                                type="object" 
                                class="btn-primary"
                                icon="fa-paper-plane"/>
                        <button string="Nouvelle conversation" 
                                name="action_new_conversation" 
                                type="object" 
                                class="btn-secondary"
                                icon="fa-refresh"
                                attrs="{'invisible': [('response', '=', False)]}"/>
                        <button string="Fermer" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                    
                </form>
            </field>
        </record>
        
        <!-- Action pour ouvrir l'assistant IA -->
        <record id="action_eazynova_ai_assistant" model="ir.actions.act_window">
            <field name="name">Assistant IA</field>
            <field name="res_model">eazynova.ai.assistant.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</odoo>