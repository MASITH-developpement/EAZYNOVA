<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="eazynova.Dashboard" owl="1">
        <div class="o_eazynova_dashboard">
            
            <!-- En-tête -->
            <div class="o_eazynova_dashboard_header">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <h1 class="mb-0">
                        <i class="fa fa-dashboard"/> Tableau de Bord EAZYNOVA
                    </h1>
                    <div>
                        <button class="btn btn-primary me-2" t-on-click="openAiAssistant">
                            <i class="fa fa-robot"/> Assistant IA
                        </button>
                        <button class="btn btn-secondary" t-on-click="refresh">
                            <i class="fa fa-refresh"/> Actualiser
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Chargement -->
            <t t-if="state.loading">
                <div class="text-center p-5">
                    <i class="fa fa-spinner fa-spin fa-3x"/>
                    <p class="mt-3">Chargement des données...</p>
                </div>
            </t>
            
            <!-- Erreur -->
            <t t-elif="state.error">
                <div class="alert alert-danger m-3" role="alert">
                    <i class="fa fa-exclamation-triangle"/> <t t-esc="state.error"/>
                </div>
            </t>
            
            <!-- Contenu -->
            <t t-else="">
                <div class="o_eazynova_dashboard_content p-3">
                    
                    <!-- Informations société -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fa fa-building"/> <t t-esc="state.data.company.name"/>
                            </h5>
                            <p class="card-text">
                                <span class="badge bg-info">
                                    Code: <t t-esc="state.data.company.code"/>
                                </span>
                            </p>
                        </div>
                    </div>
                    
                    <!-- Statistiques -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h3><t t-esc="state.data.stats.chantiers"/></h3>
                                    <p>Chantiers actifs</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h3><t t-esc="state.data.stats.factures"/></h3>
                                    <p>Factures en cours</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Utilisateur -->
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fa fa-user"/> <t t-esc="state.data.user.name"/>
                            </h5>
                            <t t-if="state.data.user.facial_enabled">
                                <span class="badge bg-success">
                                    <i class="fa fa-check"/> Reconnaissance faciale activée
                                </span>
                            </t>
                        </div>
                    </div>
                    
                </div>
            </t>
            
        </div>
    </t>
    
</templates>